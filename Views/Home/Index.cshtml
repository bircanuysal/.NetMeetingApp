@model MeetingInfo
@{
    ViewBag.Title = "Başvuru";
    Layout = "_Layout2";
}
<main class="text-center">
    <h1 class="h4"> @ViewData["sayHi"] , @ViewData["UserName"]</h1>
    <p>Toplanti Katilim Durumunuzu Bildirin</p>
    
    <div class="card my-2">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">@Model.Location</li>
            <li class="list-group-item">@Model.Date.ToString("dd/MM/yyyy HH:mm:ss") tarihinde gerçekleşecek.</li>
            <li class="list-group-item">@Model.NumberOfPeople kişilik kontenjan vardır.</li>
        </ul>
    </div>
    <a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp_action="Apply">Basvuru Yap</a>
</main>
